<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jones.jonesmanlapazapplication.Settings_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewClock"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="19dp"
                    app:srcCompat="@drawable/clock" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="36dp"
                    android:text="Button size"
                    android:textAlignment="center"
                    android:textColor="#ffff00"
                    android:textSize="40sp"
                    android:textStyle="normal|bold|italic" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">

                    <RadioButton
                        android:id="@+id/radioButtonLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Large (200)"
                        android:textColor="#ffff00"
                        android:textSize="20sp"
                        android:textStyle="normal|bold|italic" />

                    <RadioButton
                        android:id="@+id/radioButtonMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium (170)"
                        android:textColor="#ffff00"
                        android:textSize="20sp"
                        android:textStyle="normal|bold|italic" />

                    <RadioButton
                        android:id="@+id/radioButtonSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Small (150)"
                        android:textColor="#ffff00"
                        android:textSize="20sp"
                        android:textStyle="normal|bold|italic" />

                    <RadioButton
                        android:id="@+id/radioButtonCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Custom"
                        android:textColor="#ffff00"
                        android:textSize="20sp"
                        android:textStyle="normal|bold|italic" />

                </RadioGroup>

                <EditText
                    android:id="@+id/editTextCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/radioGroup2"
                    android:layout_alignStart="@+id/radioGroup2"
                    android:layout_below="@+id/radioGroup2"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="100"
                    android:textAlignment="center"
                    android:textColor="#ffff00"
                    android:textSize="20sp"
                    android:textStyle="normal|bold|italic" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>